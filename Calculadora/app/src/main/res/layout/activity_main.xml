<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mx.ayacercode.calculadora.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="40dp"
        android:background="#dfe5eae7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textView"
        android:textSize="25dp"
        android:gravity="right"
        android:layout_below="@+id/result"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#dfe5eae7"
        android:layout_alignRight="@+id/result"
        android:layout_alignEnd="@+id/result" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignWithParentIfMissing="false"
        android:weightSum="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/textView">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0.02dp"
            android:layout_weight="0.2">


            <Button
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:text="C"
                android:id="@+id/buttonC"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:background="#fd242524"
                android:layout_margin="0.15dp"
                android:clickable="true" />
            <Button
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:text="^"
                android:id="@+id/buttonOrient"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:background="#fd242524"
                android:layout_margin="0.15dp"
                android:clickable="true" />
            <Button
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:id="@+id/buttonDelete"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:background="#fd242524"
                android:layout_margin="0.15dp"
                android:clickable="true" />
            <Button
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:text="รท"
                android:id="@+id/buttonDiv"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:background="#fd242524"
                android:layout_margin="0.15dp"
                android:clickable="true" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2">

            <Button
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:text="("
                android:id="@+id/buttonParentOpen"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:background="#fd242524"
                android:layout_margin="0.15dp"
                android:clickable="true" />
            <Button
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:text=")"
                android:id="@+id/buttonParentClose"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:background="#fd242524"
                android:layout_margin="0.15dp"
                android:clickable="true" />
            <Button
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:text="%"
                android:id="@+id/buttonPorcent"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:background="#fd242524"
                android:layout_margin="0.15dp"
                android:clickable="true" />
            <Button
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:text="x"
                android:id="@+id/buttonMult"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:background="#fd242524"
                android:layout_margin="0.15dp"
                android:clickable="true"
                android:layout_gravity="center_vertical" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0.02dp"
            android:layout_weight="0.2">


            <Button
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:text="7"
                android:id="@+id/button7"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:background="#fd969996"
                android:layout_margin="0.15dp"
                android:clickable="true" />
            <Button
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:text="8"
                android:id="@+id/button8"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:background="#fd969996"
                android:layout_margin="0.15dp"
                android:clickable="true" />
            <Button
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:text="9"
                android:id="@+id/button9"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:background="#fd969996"
                android:layout_margin="0.15dp"
                android:clickable="true" />
            <Button
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:text="-"
                android:id="@+id/buttonRest"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:background="#fd242524"
                android:layout_margin="0.15dp"
                android:clickable="true" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2">>
            <Button
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:text="4"
                android:id="@+id/button4"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:background="#fd969996"
                android:layout_margin="0.15dp"
                android:clickable="true" />

            <Button
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:text="5"
                android:id="@+id/button5"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:background="#fd969996"
                android:layout_margin="0.15dp"
                android:clickable="true" />

            <Button
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:text="6"
                android:id="@+id/button6"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:background="#fd969996"
                android:layout_margin="0.15dp"
                android:clickable="true" />

            <Button
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:text="+"
                android:id="@+id/buttonSum"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:background="#fd242524"
                android:layout_margin="0.15dp"
                android:clickable="true" />
        </TableRow>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_weight="0.2">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0.02dp"
                    android:layout_weight="0.2">


                    <Button
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:id="@+id/button1"
                        android:textColor="#ffffff"
                        android:textSize="25dp"
                        android:background="#fd969996"
                        android:layout_margin="0.15dp"
                        android:clickable="true" />

                    <Button
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:text="2"
                        android:id="@+id/button2"
                        android:textColor="#ffffff"
                        android:textSize="25dp"
                        android:background="#fd969996"
                        android:layout_margin="0.15dp"
                        android:clickable="true" />
                    <Button
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:text="3"
                        android:id="@+id/button3"
                        android:textColor="#ffffff"
                        android:textSize="25dp"
                        android:background="#fd969996"
                        android:layout_margin="0.15dp"
                        android:clickable="true" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2">>
                    <Button
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:id="@+id/button0"
                        android:textColor="#ffffff"
                        android:textSize="25dp"
                        android:background="#fd242524"
                        android:layout_margin="0.15dp"
                        android:clickable="true" />

                    <Button
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:text="00"
                        android:id="@+id/button00"
                        android:textColor="#ffffff"
                        android:textSize="25dp"
                        android:background="#fd242524"
                        android:layout_margin="0.15dp"
                        android:clickable="true" />

                    <Button
                        android:layout_width="85dp"
                        android:layout_height="match_parent"
                        android:text="."
                        android:id="@+id/buttonPto"
                        android:textColor="#ffffff"
                        android:textSize="25dp"
                        android:background="#fd242524"
                        android:layout_margin="0.15dp"
                        android:clickable="true" />

                </TableRow>
            </LinearLayout>

            <Button
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:text="="
                android:textSize="25dp"
                android:id="@+id/buttonResult"
                android:background="#319d2e"
                android:textColor="#ffffff"
                android:clickable="true" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
